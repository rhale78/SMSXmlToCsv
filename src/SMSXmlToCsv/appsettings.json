{
  "BackupSettings": {
    "Enabled": true,
    "BackupDirectory": "../../../Backups/{date}/{time}",
    "ExcludedDirectories": [
      ".git",
      ".github",
      "copilot",
      "bin",
      "obj",
      ".vs",
      "packages",
      "node_modules"
    ],
    "ExcludedFiles": [
      "*.tmp",
      "*.cache",
      "*.log"
    ]
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
